    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/mdx": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "@next/bundle-analyzer": "^13.4.8",
    "@next/mdx": "^13.4.8",
    "airtable": "^0.12.1",
    "date-fns": "^2.30.0",
    "fathom-client": "^3.5.0",
    "feed": "^4.2.2",
    "framer-motion": "^10.12.18",
    "gray-matter": "^4.0.3",
    "logrocket": "^4.0.3",
    "logrocket-react": "^5.0.1",
    "next": "^13.4.8",
    "next-mdx-remote": "4.2.0",
    "pluralize": "^8.0.0",
    "prism-react-renderer": "^1.3.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-img-size": "^1.0.1",
    "rehype-slug": "^5.1.0",
    "remark": "^14.0.3",
    "remark-html": "^15.0.2",
    "sass": "^1.63.6",
    "sharp": "^0.32.1",
    "swr": "^2.2.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^13.4.8",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "8.44.0",
    "eslint-config-next": "^13.4.8",
    "eslint-config-prettier": "^8.8.0",
    "husky": ">=8.0.3",
    "lint-staged": "^13.2.3",
    "next-sitemap": "^4.1.8",
    "prettier": "^2.8.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mbifulco/blog"
  },
  "bugs": {
    "url": "https://github.com/mbifulco/blog/issues"
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  }
}
